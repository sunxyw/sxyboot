{
    "name": "sunxyw/sxyboot",
    "description": "A lite framework",
    "keywords": ["framework", "rest", "router", "psr7", "mvc", "lite"],
    "homepage": "http://github.com/sunxyw/sxyboot",
    "license": "MIT",
    "authors": [
        {
            "name": "sunxyw",
            "email": "xy2496419818@gmail.com",
            "homepage": "https://www.sunxyw.xyz/"
        }
    ],
    "require": {
        "php": ">=7.0",
        "illuminate/database": "^5.8",
        "illuminate/pagination": "^5.8",
        "monolog/monolog": "^1.17",
        "overtrue/validation": "^2.0",
        "rubellum/slim-blade-view": "^0.1.1",
        "slim/php-view": "^2.0",
        "slim/slim": "^3.1"
    },
    "require-dev": {
        "phpunit/phpunit": ">=5.0"
    },
    "autoload-dev": {
        "psr-4": {
            "App\\": "app/",
            "Tests\\": "tests/"
        }
    },
    "config": {
        "process-timeout": 0,
        "sort-packages": true
    },
    "scripts": {
        "start": "php -S localhost:8080 -t public",
        "test": "phpunit"
    }
}
